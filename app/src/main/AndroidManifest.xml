<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="stevemerollis.codetrial.weather">

    <uses-permission android:name="gm.permission.keystore.READ" /> <!--
        Enables the PapiInterceptor to make back office calls -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!--
        Enables us to confirm network available before attempting calls -->
    <uses-permission android:name="android.permission.INTERNET" /> <!--
        Has some data -->
    <uses-permission android:name="com.gm.vehicle.permission.READ_VIN_PROTECTED" /> <!--
        Required by compat to access vin -->
    <uses-permission android:name="android.permission.CALL_PHONE" /> <!--
        Enables the call advisor button to launch a phone call -->
    <uses-permission android:name="android.car.permission.CAR_VENDOR_EXTENSION" />
    <uses-permission android:name="android.car.permission.CAR_DRIVING_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="gm.permission.authentication.USER" />
    <uses-permission android:name="gm.permission.authentication.ID" />
    <uses-permission android:name="gm.permission.authentication.CLIENT" />

    <uses-permission
        android:name="android.permission.GET_ACCOUNTS_PRIVILEGED"
        tools:ignore="ProtectedPermissions" />
    <uses-permission
        android:name="android.permission.INTERACT_ACROSS_USERS"
        tools:ignore="ProtectedPermissions" /> <!--
        Required by compat's GmAuthTokenManager to retrieve user account guid -->
    <uses-permission
        android:name="android.permission.MANAGE_USERS"
        tools:ignore="ProtectedPermissions" /> <!--
        Required for getCurrentUser call to retrieve user account guid -->

    <uses-feature android:name="android.hardware.type.automotive" android:required="true" />

    <application
        android:name="stevemerollis.codetrial.weather.stevemerollis.codetrial.weather.app.PaymentApp"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requiredForAllUsers="true"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme"
        android:launchMode="singleInstance"
        tools:ignore="AllowBackup">

        <activity
            android:name="stevemerollis.codetrial.weather.host.HostActivity"
            android:clearTaskOnLaunch="true">
            <intent-filter>
                <action android:name="stevemerollis.codetrial.weather.action.PURCHASE" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="android.test.runner"
            android:required="false" />
        <uses-library
            android:name="android.test.base"
            android:required="false" />
        <uses-library
            android:name="android.test.mock"
            android:required="false" />

        <meta-data
            android:name="com.google.android.gms.car.application"
            android:resource="@xml/automotive_app_desc" />

    </application>

</manifest>