<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:viewBindingIgnore="true"
    android:theme="@style/AppTheme">

    <View
        android:id="@+id/divider1"
        style="@style/Divider"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/validate_input_text" />

    <TextView
        android:id="@+id/validate_input_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/gmsansui_regular"
        android:gravity="center"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintBottom_toBottomOf="@+id/btn_numpad_back"
        app:layout_constraintEnd_toStartOf="@+id/btn_numpad_back"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_numpad_back"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/btn_numpad_back"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background="?attr/backspaceSelector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/AppTheme"/>

</androidx.constraintlayout.widget.ConstraintLayout>